<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>

    <div class="container ">
        <div class="row">
            <div class="text-center display-6 m-3">
                <h3>Update User Profile</h3>
                <hr>
            </div>
            <div class="rounded text-center">
                <img src="userImage/<%= user.image %>" class="img-thumbnail rounded" alt="<%= user.image %>"
                    width="150px" height="100px">
            </div>

            <div class="text-center"><br>
                <form action="" method="post" enctype="multipart/form-data">
                    <label>Upload Image Here</label>
                    <input type="file" name="image">
                    <input type="hidden" name="user_id" value="<%= user._id %>"><br><br>

                    <label>User Name</label>
                    <input type="text" name="name" value="<%= user.name %>" placeholder="Enter Name" required><br><br>

                    <label>User Email</label>
                    <input type="email" name="email" value="<%= user.email %>" placeholder="Enter Email"
                        required><br><br>

                    <label>User Mobile</label>
                    <input type="text" name="mno" value="<%= user.mobile%>" placeholder="Enter Mobile" required><br><br>

                    <label>Verified</label>
                    <input type="radio" name="verify" value="1" <% if (user.is_Verified == '1') { %>
                     Checked
                    <% } %>>

                    <label>Un-Verified</label>
                    <input type="radio" name="verify" value="0" <% if (user.is_Verified == '0') { %>
                        Checked
                       <% } %>><br><br>

                    <label>Is-Admin</label>
                    <input type="text" name="is_Admin" value="<%= user.is_Admin%>" placeholder="Enter Mobile"
                        required><br><br>

                    <input type="submit" value="Update"> ! <a href="/admin/dashboard">Pre</a>
                </form>


